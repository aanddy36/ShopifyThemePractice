{{ 'page.css' | asset_url | stylesheet_tag }}
<div class="page-cont">
  <h1>{{ page.title }}</h1>
  <div>{{ page.content }}</div>
</div>

{% form 'contact' %}
  {{ form.errors | default_errors }}

  <div class="email">
    <label for="email">Email</label>
    <input
      type="email"
      name="contact[email]"
      id="email" />
  </div>

  <div class="message">
    <label for="message">Message</label>
    <textarea name="contact[body]" id="message"></textarea>
  </div>

  <div class="submit">
    <input type="submit" value="Create" />
  </div>
{% endform %}
{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "checkbox",
        "id": "is_contact_available",
        "label": "Contact Form",
        "default": false,
        "info": "This defines if the contact form is added or not"
      }
    ]
  }
{% endschema %}