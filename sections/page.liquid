{{ 'page.css' | asset_url | stylesheet_tag }}
<div class="page-cont">
  <h1>{{ page.title }}</h1>
  <div>{{ page.content }}</div>
</div>
{% if section.settings.is_contact_available %}
  {% form 'contact' %}
    {{ form.errors | default_errors }}

    <div class="email">
      <label for="email">Email</label>
      <input
        type="email"
        name="contact[email]"
        id="email" />
    </div>

    <div class="message">
      <label for="message">Message</label>
      <textarea name="contact[body]" id="message"></textarea>
    </div>

    <div class="submit">
      <input type="submit" value="Create" />
    </div>
  {% endform %}
{% endif %}
{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "checkbox",
        "id": "is_contact_available",
        "label": "Contact Form",
        "default": true,
        "info": "This defines if the contact form is added or not"
      }
    ]
  }
{% endschema %}