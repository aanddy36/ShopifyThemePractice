{{ 'homepage.css' | asset_url | stylesheet_tag }}
  <div class="hp-cont">
  <h1 class="hp-header">{{ collections.frontpage.title }}</h1>
  <!-- collections['frontpage'].title -->

  <div class="hp-products">
    {% for collection in collections['frontpage'].products %}
      <a href="{{collection.url}}" class="hp-product">
        <img
          src="{{ collection.featured_image |  image_url  }}"
          width="300"
          height="200"
          loading="lazy" />
        <div class="price-title">
          <h2>{{ collection.title }}</h2>
          <h3>{{ collection.price | money }}</h3>
        </div>
      </a>
    {% endfor %}
  </div>
</div>